@model PTLab2_Final.Models.Electronic

<h2>Редактирование товара "@Model.Name"</h2>
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <p>
        <label asp-for="Name">Название</label><br />
        <input type="text" asp-for="Name" />
    </p>
    <p>
        <label asp-for="Category">Категория</label><br />
        <input type="text" asp-for="Category" />
    </p>
    <p>
        <label asp-for="Price">Цена</label><br />
        <input type="number" min="0" asp-for="Price" />
    </p>
    <p>
        <label asp-for="ForSale">Всего</label><br />
        <input type="number" min="0" asp-for="ForSale" />
    </p>
    <p>
        <label asp-for="Sold">Продано</label><br />
        <input type="number" min="0" asp-for="Sold" />
    </p>
    <p>
        <label asp-for="Counter">Счетчик</label><br />
        <input type="number" min="0" asp-for="Counter" />
    </p>
    <p>
        <input type="submit" value="Сохранить" />
    </p>
</form>